---
import BaseLayout from "../layouts/Base.astro";
import { Company } from "../schemas/documents/company/schema";
import { ContactForm } from "../forms/contact";

const company = await Company.doc();
---

<BaseLayout title="Contact Us">
  <div class="flex flex-col md:flex-row w-full ~gap-8/12">
    <ContactForm client:visible />
    <div class="w-full flex-[1.38]">
      <iframe
        class="w-full h-full aspect-[1/1] md:aspect-auto rounded-lg overflow-hidden grayscale hover:grayscale-0 bg-neutral-100"
        src={company.location}
        style="border:0;"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </div>
</BaseLayout>
